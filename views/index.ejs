<!DOCTYPE html>
<html>
<head>
  <title>Final project - Hello world!</title>

  <script src="/vendor/angular/angular.min.js"></script>
  <script src="/vendor/angular-resource/angular-resource.min.js"></script>
  <script src="/vendor/angular-jwt/dist/angular-jwt.min.js"></script>

  <script src="/js/app.js"></script>
  <script src="/js/models/Author.js"></script>
  <script src="/js/controllers/authors.js"></script>
  <script src="/js/services/token.js"></script>
  <script src="/js/services/authInterceptor.js"></script>

  <link rel="stylesheet" type="text/css" href="/css/app.css">
</head>
<body ng-app="final_project" ng-controller="authorsController as authors">
  <header>
    <h1>Final project</h1>
    <nav>
      <ul>
        <li><a href="#login">Log in</a></li>
        <li><a href="#register">Register</a></li>
        <li><a ng-click="users.logout()">Log Out</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <section>
      <div class="message">
        {{ authors.message }}
      </div>

      <div>
        <h3>welcome back {{ authors.currentAuthor.username }}</h3>
      </div>
    </section>

    <section id="login">
      <h3>Login</h3>
      <form ng-submit="authors.login()" novalidate>
        <label for="email">Email</label>
        <input type="text" name="email" placeholder="Email" ng-model="authors.currentAuthor.email">

        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" ng-model="authors.currentAuthor.password">

        <input type="submit" value="Login">
      </form>
    </section>

    <section id="register">
      <h3>Register</h3>
      <form ng-submit="authors.register()" novalidate>
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="Username" ng-model="authors.currentAuthor.username">

        <label for="email">Email</label>
        <input type="email" name="email" placeholder="E-mail" ng-model="authors.currentAuthor.email">

        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" ng-model="authors.agent.password">

        <label for="passwordConfirmation">
        Password Confirmation</label>
        <input type="password" name="passwordConfirmation"
        placeholder="Re-enter password" ng-model="authors.agent.passwordConfirmation">

        <input type="submit" value="Register">
      </form>
    </section>

  </main>

</body>
</html>